<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

	<persistence-unit name="OnlinestorePersistence">
		<exclude-unlisted-classes />
		<properties>
			<property name="datanucleus.ConnectionURL" value="jdbc:mysql://localhost/droit_onlinestore?createDatabaseIfNotExist=true" />
			<property name="javax.jdo.option.ConnectionDriverName" value="com.mysql.jdbc.Driver" />
			<property name="javax.jdo.option.ConnectionUserName" value="root" />
			<property name="javax.jdo.option.ConnectionPassword" value="root" />
			<property name="datanucleus.schema.autoCreateAll" value="true" />
			<property name="javax.jdo.option.Mapping" value="rdbms" />
		</properties>
	</persistence-unit>
</persistence>